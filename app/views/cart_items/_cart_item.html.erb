<div class="text-center flex mx-auto justify-center p-2">
    
    <%if cart_item.quantity < cart_item.service_offer.slot_availabilty%>
        <%=button_to "+", add_path(cart_item), method: :put, class: "bg-blue-500 rounded-full px-2 mx-1" %>
    <%end%>
    <span><%=cart_item.quantity%></span> 
    <%if cart_item.quantity > 1 %>
    <%=button_to "-", remove_path(cart_item), method: :put, class: "bg-blue-500 rounded-full px-2 mx-1"   %>
    <%else%>
    <%=button_to "-", delete_path(cart_item), method: :put, class: "bg-blue-500 rounded-full px-2 mx-1"   %>
    <%end%>
    <span><%=cart_item.service_offer.service_offer_name%></span>
    <%=button_to "Remove", delete_path(cart_item), method: :put, class: "bg-red-300 rounded-full px-2 mx-1"   %>  
</div>
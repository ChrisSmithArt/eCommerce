<%= render "application/header" %>


<div class="flex justify-center space-x-5 bg-gray-200 rounded-lg">
    <div class="space-y-3">
        <div class="space-x-3 flex justify-around mx-5">
            <h2> <%= @user.user_name %></h2>
            <% if @user.image.attached? %>
                <%= image_tag @user.image.variant(:full), class: "rounded-lg m-2" %>
            <% end %>
            
        </div>
        <div class="bg-gray-400 rounded-lg">
            <div> <%= @user.description %></div>
            <div>From <%= @user.tax_rate_by_location.province %></div>
        </div>
    </div>
    <div>
        <h2> <%= @user.user_name %>'s Service Offers</h2>

        <div class="grid grid-cols-1 grid-flow-row gap-4 bg-gray-400 rounded-lg mx-auto p-5">
        <%= render @user.service_offers, full: true%>
        </div>
    </div>
</div>
<%= render "application/footer" %>
